# Set default behavior to automatically normalize line endings
* text=auto

# Force Unix-style line endings for scripts and code
*.js     text eol=lf
*.jsx    text eol=lf
*.ts     text eol=lf
*.tsx    text eol=lf
*.json   text eol=lf
*.css    text eol=lf
*.scss   text eol=lf
*.html   text eol=lf
*.md     text eol=lf
*.yml    text eol=lf
*.yaml   text eol=lf

# Binary files - do not change line endings
*.png    binary
*.jpg    binary
*.jpeg   binary
*.gif    binary
*.ico    binary
*.eot    binary
*.ttf    binary
*.woff   binary
*.woff2  binary
*.mp3    binary
*.mp4    binary

# Expo / Node specific
package-lock.json    text eol=lf
yarn.lock           text eol=lf
